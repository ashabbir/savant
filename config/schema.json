{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/savant/settings.schema.json",
  "title": "Savant Settings",
  "type": "object",
  "required": ["indexer", "repos", "mcp", "database"],
  "additionalProperties": false,
  "properties": {
    
    "indexer": {
      "type": "object",
      "required": ["maxFileSizeKB", "languages", "chunk"],
      "additionalProperties": false,
      "properties": {
        "maxFileSizeKB": { "type": "integer", "minimum": 1 },
        "languages": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "chunk": {
          "type": "object",
          "required": ["mdMaxChars", "codeMaxLines", "overlapLines"],
          "additionalProperties": false,
          "properties": {
            "mdMaxChars": { "type": "integer", "minimum": 100 },
            "codeMaxLines": { "type": "integer", "minimum": 10 },
            "overlapLines": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "repos": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "ignore": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          }
        }
      }
    },
    "mcp": {
      "type": "object",
      "required": ["listenHost", "listenPort"],
      "additionalProperties": false,
      "properties": {
        "listenHost": { "type": "string" },
        "listenPort": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "allowOrigins": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["*"]
        }
      }
    },
    "database": {
      "type": "object",
      "required": ["host", "port", "db", "user", "password"],
      "additionalProperties": false,
      "properties": {
        "host": { "type": "string" },
        "port": { "type": "integer", "minimum": 1 },
        "db": { "type": "string" },
        "user": { "type": "string" },
        "password": { "type": "string" }
      }
    }
  }
}
