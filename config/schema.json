{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/savant/settings.schema.json",
  "title": "Savant Settings",
  "type": "object",
  "required": ["indexer", "repos", "mcp", "database"],
  "additionalProperties": false,
  "properties": {
    
    "indexer": {
      "type": "object",
      "required": ["maxFileSizeKB", "languages", "chunk"],
      "additionalProperties": false,
      "properties": {
        "scanMode": { "type": "string", "enum": ["ls", "git-ls"], "default": "ls" },
        "maxFileSizeKB": { "type": "integer", "minimum": 1 },
        "languages": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "chunk": {
          "type": "object",
          "required": ["mdMaxChars", "codeMaxLines", "overlapLines"],
          "additionalProperties": false,
          "properties": {
            "mdMaxChars": { "type": "integer", "minimum": 100 },
            "codeMaxLines": { "type": "integer", "minimum": 10 },
            "overlapLines": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "repos": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "ignore": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          }
        }
      }
    },
    "mcp": {
      "type": "object",
      "additionalProperties": true
    },
    "database": {
      "type": "object",
      "required": ["host", "port", "db", "user", "password"],
      "additionalProperties": false,
      "properties": {
        "host": { "type": "string" },
        "port": { "type": "integer", "minimum": 1 },
        "db": { "type": "string" },
        "user": { "type": "string" },
        "password": { "type": "string" }
      }
    },
    "logging": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "level": { "type": "string", "enum": ["trace", "debug", "info", "warn", "error"] },
        "format": { "type": "string", "enum": ["json", "text"] },
        "stdout_enabled": { "type": "boolean" },
        "core_file_path": { "type": "string" },
        "engine_file_path": { "type": "string" }
      }
    },
    "agent": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "maxSteps": { "type": "integer", "minimum": 1 },
        "retryLimit": { "type": "integer", "minimum": 0 },
        "prompt": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "slmBudgetTokens": { "type": "integer", "minimum": 100 },
            "llmBudgetTokens": { "type": "integer", "minimum": 100 }
          }
        }
      }
    },
    "llm": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "provider": { "type": "string", "enum": ["ollama", "openai", "anthropic"] },
        "slmModel": { "type": "string" },
        "llmModel": { "type": "string" },
        "ollamaHost": { "type": "string" }
      }
    }
  }
}
