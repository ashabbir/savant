{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://savant.local/schemas/reasoning_api.v1.json",
  "title": "Savant Reasoning API v1",
  "type": "object",
  "properties": {
    "agent_intent": {
      "type": "object",
      "properties": {
        "request": {
          "type": "object",
          "required": ["session_id", "persona", "goal_text"],
          "properties": {
            "session_id": { "type": "string" },
            "persona": { "type": "object" },
            "driver": { "type": "object" },
            "repo_context": { "type": "object" },
            "memory_state": { "type": "object" },
            "history": { "type": "array" },
            "goal_text": { "type": "string" },
            "forced_tool": { "type": ["string", "null"] },
            "max_steps": { "type": ["integer", "null"] }
          }
        },
        "response": {
          "type": "object",
          "required": ["intent_id", "finish"],
          "properties": {
            "status": { "type": ["string", "null"] },
            "duration_ms": { "type": ["number", "null"] },
            "trace": { "type": ["array", "null"] },
            "intent_id": { "type": "string" },
            "tool_name": { "type": ["string", "null"] },
            "tool_args": { "type": ["object", "null"] },
            "reasoning": { "type": ["string", "null"] },
            "finish": { "type": "boolean" },
            "final_text": { "type": ["string", "null"] },
            "next_prompt": { "type": ["string", "null"] }
          }
        }
      }
    },
    "workflow_intent": {
      "type": "object",
      "properties": {
        "request": {
          "type": "object",
          "required": ["run_id", "workflow_name", "current_node"],
          "properties": {
            "run_id": { "type": "string" },
            "workflow_name": { "type": "string" },
            "current_node": { "type": "string" },
            "outputs": { "type": ["object", "null"] },
            "params": { "type": ["object", "null"] },
            "memory_state": { "type": ["object", "null"] }
          }
        },
        "response": {
          "type": "object",
          "required": ["intent_id", "finish"],
          "properties": {
            "status": { "type": ["string", "null"] },
            "duration_ms": { "type": ["number", "null"] },
            "trace": { "type": ["array", "null"] },
            "intent_id": { "type": "string" },
            "next_node": { "type": ["string", "null"] },
            "action_type": { "type": ["string", "null"] },
            "tool_call": { "type": ["string", "null"] },
            "tool_args": { "type": ["object", "null"] },
            "reasoning": { "type": ["string", "null"] },
            "finish": { "type": "boolean" }
          }
        }
      }
    },
    "errors": {
      "type": "object",
      "properties": {
        "invalid_tool": {
          "type": "object",
          "properties": {
            "error_code": { "const": "invalid_tool" },
            "message": { "type": "string" }
          },
          "required": ["error_code", "message"]
        },
        "timeout": {
          "type": "object",
          "properties": {
            "error_code": { "const": "timeout" },
            "message": { "type": "string" },
            "retry_after_ms": { "type": ["integer", "null"] }
          },
          "required": ["error_code", "message"]
        },
        "unsupported_version": {
          "type": "object",
          "properties": {
            "error_code": { "const": "unsupported_version" },
            "message": { "type": "string" },
            "supported": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["error_code", "message"]
        }
      }
    }
  }
}

